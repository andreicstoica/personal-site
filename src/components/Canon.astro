---
// You can add data here later, for now I'll use some example structure
const inspiringPeople = [
  {
    name: "Example Person 1",
    description: "Brief description of why they inspire you",
    link: "#",
  },
  {
    name: "Example Person 2",
    description: "Brief description of why they inspire you",
    link: "#",
  },
  // Add more people as needed
];
---

<div class="flex flex-col gap-12 p-8">
  <section>
    <p class="text-md max-w-2xl text-pretty text-[--color-text-primary] mb-8">
      People who inspire me and shape how I think about the world.
    </p>
  </section>

  <section class="grid gap-6 max-w-4xl">
    {
      inspiringPeople.map((person) => (
        <div class="border border-[--color-bg-tertiary] rounded-lg p-6 hover:shadow-md transition-shadow">
          <h3 class="text-xl font-semibold mb-2">
            {person.link !== "#" ? (
              <a
                href={person.link}
                class="text-[--color-primary] hover:text-[--color-primary-hover] hover:underline"
                target="_blank"
                rel="noopener"
              >
                {person.name}
              </a>
            ) : (
              <span class="text-[--color-text-primary]">{person.name}</span>
            )}
          </h3>
          <p class="text-[--color-text-secondary]">{person.description}</p>
        </div>
      ))
    }
  </section>

  <section class="max-w-2xl">
    <div class="bg-[--color-bg-secondary] rounded-lg p-6">
      <p class="text-sm text-[--color-text-muted] italic">
        This is a living document that grows as I discover new voices and
        perspectives.
      </p>
    </div>
  </section>
</div>

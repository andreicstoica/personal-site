---
import MarkdownPage from "./MarkdownPage.astro";
import MediaGallery from "./MediaGallery.astro";
import colophonContent from "../md-pages/colophon.md?raw";
import MarkdownLayout from "../layouts/MarkdownLayout.astro";

// Old site images
const oldSiteImages = [
  "old-site-2021.png",
  "old-site-2023.png",
  "old-site-2025.gif",
];
---

<MarkdownLayout title="Colophon">
  <div class="space-y-8">
    <MarkdownPage content={colophonContent} />

    <!-- Old Sites Gallery Section -->
    <section class="">
      <h2 class="text-xl font-medium text-[--color-text-primary] mb-3">
        Memorial to my old sites (rip)
      </h2>
      <MediaGallery
        images={oldSiteImages}
        experienceName="Old Website Designs"
      />
    </section>
  </div>
</MarkdownLayout>

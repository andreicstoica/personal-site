---
interface Props {
  href?: string;
  text?: string;
}

const { href = "/", text = "Home" } = Astro.props;
---

<div class="mb-6">
  <a
    href={href}
    class="hover:underline transition-colors"
    style="color: var(--color-accent); &:hover { color: var(--color-accent-hover); }"
    >&larr; {text}</a
  >
</div>

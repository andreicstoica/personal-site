---
// No imports needed for this simple navigation
---

<nav
  class="w-full bg-gradient-to-r from-[var(--color-primary)] to-[var(--color-bg-primary)] px-6 py-4 flex justify-between items-center"
>
  <!-- Name on the left -->
  <div class="text-2xl text-[var(--text-primary)] font-black">
    <a href="/" class="hover:opacity-90">Andrei Stoica</a>
  </div>

  <!-- Navigation boxes on the right -->
  <div class="flex items-end gap-2 text-end">
    <!-- Internal page links -->
    <a href="/" class="nav-box">
      <span class="nav-text">About</span>
    </a>
    <a href="/canon" class="nav-box">
      <span class="nav-text">Canon</span>
    </a>
    <a href="/colophon" class="nav-box">
      <span class="nav-text">Colophon</span>
    </a>
    <a href="/fitness" class="nav-box">
      <span class="nav-text">Fitness</span>
    </a>

    <!-- External links -->
    <a href="https://github.com/andreicstoica/" target="_blank" class="nav-box">
      <span class="nav-text">GitHub</span>
    </a>
    <a
      href="https://www.linkedin.com/in/andrei-c-stoica/"
      target="_blank"
      class="nav-box"
    >
      <span class="nav-text">LinkedIn</span>
    </a>
    <a
      href="https://andreisthoughts.substack.com/"
      target="_blank"
      class="nav-box"
    >
      <span class="nav-text">Blog</span>
    </a>
    <a href="https://x.com/andreistoica_" target="_blank" class="nav-box">
      <span class="nav-text">X</span>
    </a>
  </div>
</nav>

<style>
  .nav-box {
    display: flex;
    height: calc(2 * 1.5rem); /* 2 * line-height */
    background-color: var(--color-bg-primary);
    border: 1px solid var(--color-text-secondary);
    text-decoration: none;
    transition: all 0.2s ease;
    color: var(--color-text-primary);
  }

  .nav-box:hover {
    background-color: var(--color-primary);
    border-color: var(--color-primary);
  }

  .nav-box:hover .nav-text {
    color: var(--color-text-inverse);
  }

  .nav-text {
    font-size: 0.875rem;
    font-weight: 500;
    line-height: 1.5rem;
    transition: color 0.2s ease;
  }

  /* Mobile responsive adjustments */
  @media (max-width: 768px) {
    nav {
      flex-direction: column;
      gap: 1rem;
      align-items: center;
    }

    .nav-box {
      height: calc(2 * 1.25rem);
    }

    .nav-text {
      font-size: 0.75rem;
      line-height: 1.25rem;
    }

    nav > div:last-child {
      flex-wrap: wrap;
      justify-content: center;
    }
  }

  @media (max-width: 640px) {
    .nav-box {
      width: 60px;
      height: calc(2 * 1.125rem);
    }

    .nav-text {
      font-size: 0.6875rem;
      line-height: 1.125rem;
    }
  }
</style>

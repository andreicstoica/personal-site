---
import type { Project } from "../../lib/types";

interface Props {
    project: Project;
    displayText: string;
}

const { project, displayText } = Astro.props;
---

<button
    class="project-link inline-block text-blue-600 dark:text-blue-400 hover:text-blue-800 dark:hover:text-blue-300 underline decoration-dotted underline-offset-2 hover:decoration-solid transition-all duration-200 cursor-pointer bg-transparent border-none p-0 font-inherit"
    data-project-id={project.id}
    aria-label={`View details for ${project.title}`}
    type="button"
>
    {displayText}
</button>

<style>
    .project-link:hover {
        text-decoration-thickness: 2px;
    }

    .project-link:focus {
        outline: 2px solid var(--color-accent, #3b82f6);
        outline-offset: 2px;
        border-radius: 2px;
    }

    .project-link:focus:not(:focus-visible) {
        outline: none;
    }
</style>

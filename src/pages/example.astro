---
import Layout from "../layouts/Layout.astro";
---

<Layout title="Design System Example">
    <main class="container">
        <section class="hero">
            <h1 class="text-gradient">Your Custom Design System</h1>
            <p class="subtitle">Showcasing your custom fonts and colors</p>
        </section>

        <section class="content">
            <h2>Typography Examples</h2>
            <p>This is regular body text using your custom font family.</p>
            <code>This is code text using your custom monospace font</code>

            <h3 class="text-gradient-accent">Gradient Text Example</h3>
            <p class="text-muted">
                This is muted text for secondary information.
            </p>

            <h2>Button Examples</h2>
            <div class="button-group">
                <a href="#" class="btn-primary">Primary Button</a>
                <a href="#" class="btn-secondary">Secondary Button</a>
            </div>

            <h2>Color Palette</h2>
            <div class="color-grid">
                <div class="color-card primary">
                    <div class="color-swatch"></div>
                    <span>Primary</span>
                </div>
                <div class="color-card secondary">
                    <div class="color-swatch"></div>
                    <span>Secondary</span>
                </div>
                <div class="color-card accent">
                    <div class="color-swatch"></div>
                    <span>Accent</span>
                </div>
            </div>
        </section>
    </main>
</Layout>

<style>
    .container {
        max-width: 1200px;
        margin: 0 auto;
        padding: var(--spacing-lg);
    }

    .hero {
        text-align: center;
        padding: var(--spacing-xl) 0;
    }

    .hero h1 {
        font-size: 3rem;
        font-weight: 700;
        margin-bottom: var(--spacing-sm);
    }

    .subtitle {
        font-size: 1.25rem;
        color: var(--color-text-secondary);
        margin-bottom: var(--spacing-xl);
    }

    .content {
        max-width: 800px;
        margin: 0 auto;
    }

    .content h2 {
        font-size: 2rem;
        font-weight: 600;
        margin: var(--spacing-xl) 0 var(--spacing-md) 0;
        color: var(--color-text-primary);
    }

    .content h3 {
        font-size: 1.5rem;
        font-weight: 500;
        margin: var(--spacing-lg) 0 var(--spacing-sm) 0;
    }

    .text-muted {
        color: var(--color-text-muted);
    }

    .button-group {
        display: flex;
        gap: var(--spacing-md);
        margin: var(--spacing-md) 0;
        flex-wrap: wrap;
    }

    .color-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(150px, 1fr));
        gap: var(--spacing-md);
        margin: var(--spacing-md) 0;
    }

    .color-card {
        display: flex;
        flex-direction: column;
        align-items: center;
        gap: var(--spacing-sm);
        padding: var(--spacing-md);
        background: var(--color-bg-secondary);
        border-radius: var(--radius-md);
    }

    .color-swatch {
        width: 60px;
        height: 60px;
        border-radius: 50%;
        border: 2px solid var(--color-bg-tertiary);
    }

    .color-card.primary .color-swatch {
        background: var(--color-primary);
    }

    .color-card.secondary .color-swatch {
        background: var(--color-secondary);
    }

    .color-card.accent .color-swatch {
        background: var(--color-accent);
    }

    .color-card span {
        font-weight: 500;
        color: var(--color-text-primary);
    }

    @media (max-width: 768px) {
        .hero h1 {
            font-size: 2rem;
        }

        .button-group {
            flex-direction: column;
        }
    }
</style>

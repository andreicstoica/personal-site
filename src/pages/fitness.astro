---
import PageLayout from "../layouts/PageLayout.astro";
import MarkdownLayout from "../layouts/MarkdownLayout.astro";
import MediaGallery from "../components/MediaGallery.astro";
import { getEntry } from "astro:content";

const raceEntry = await getEntry("pages", "race");
const outdoorsEntry = await getEntry("pages", "outdoors");
let RaceContent, OutdoorsContent;
if (raceEntry) {
  ({ Content: RaceContent } = await raceEntry.render());
}
if (outdoorsEntry) {
  ({ Content: OutdoorsContent } = await outdoorsEntry.render());
}
---

<PageLayout title="Fitness" description="Running and outdoor activities">
  <MarkdownLayout title="Fitness">
    <div class="flex flex-col gap-8">
      <section>
        <p
          class="text-md max-w-2xl text-pretty text-[--color-text-primary] mb-3"
        >
          Running and outdoor activities
        </p>
      </section>

      <div class="markdown-content">
        {RaceContent && <RaceContent />}
        {OutdoorsContent && <OutdoorsContent />}
      </div>

      <section>
        <h2 class="text-xl font-medium mb-4 text-[--color-text-primary]">
          Races
        </h2>
        <MediaGallery
          images={[
            "queens.webp",
            "bronx-1.webp",
            "bronx-2.webp",
            "newport.webp",
            "staten-island.webp",
          ]}
          experienceName="Races"
          variant="desktop"
        />
        <h2 class="text-xl font-medium mt-2 mb-4 text-[--color-text-primary]">
          Outdoors
        </h2>
        <MediaGallery
          images={[
            "beach.webp",
            "sister-1.webp",
            "sister-2.webp",
            "sister-3.webp",
            "sister-4.webp",
          ]}
          experienceName="Outdoors"
          variant="desktop"
        />
      </section>
    </div>
  </MarkdownLayout>
</PageLayout>

<style>
  .markdown-content :global(h1) {
    font-size: 1.25rem;
    font-weight: 500;
    margin-bottom: 0.75rem;
    color: var(--color-text-primary);
    text-transform: capitalize;
  }

  .markdown-content :global(h2) {
    font-size: 1.125rem;
    font-weight: 600;
    color: var(--color-text-primary);
    margin-bottom: 0.75rem;
    margin-top: 1.5rem;
  }

  .markdown-content :global(h3) {
    font-size: 1rem;
    font-weight: 500;
    color: var(--color-text-primary);
    margin-bottom: 0.5rem;
    margin-top: 1rem;
  }

  .markdown-content :global(ul) {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
  }

  .markdown-content :global(li) {
    color: var(--color-text-primary);
    margin-bottom: 0.25rem;
  }

  .markdown-content :global(li::before) {
    content: "* ";
    display: inline-block;
    position: relative;
    top: 0.25rem;
  }

  .markdown-content :global(a) {
    color: var(--color-secondary);
    text-decoration: none;
  }

  .markdown-content :global(a:hover) {
    color: var(--color-secondary-hover);
    text-decoration: underline;
  }

  .markdown-content :global(p) {
    color: var(--color-text-primary);
    line-height: 1.625;
    margin-bottom: 1rem;
  }
</style>

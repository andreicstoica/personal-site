---
import CanonPage from "../components/CanonPage.astro";
import Layout from "../layouts/Layout.astro";
import Nav from "../components/Nav.astro";
---

<Layout
  title="Canon - Andrei Stoica Portfolio"
  description="Andrei Stoica's Canon"
>
  <!-- Nav takes 2 columns on desktop (lg+), full width on mobile -->
  <div class="col-span-12 lg:col-span-2 lg:h-screen">
    <Nav />
  </div>
  <!-- Canon takes remaining 10 columns on desktop, full width on mobile -->
  <div class="col-span-12 lg:col-span-10 lg:overflow-y-auto lg:h-screen">
    <CanonPage />
  </div>
</Layout>
